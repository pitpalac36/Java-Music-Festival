<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="domain.User" table="users">
        <id name="id"  type="int" column="userId">
            <generator class="increment"/>
        </id>
        <property
                name="username"
                type="string"
                column="username"
        />
        <property
                name="password"
                type="string"
                column="password"
        />
    </class>
</hibernate-mapping>